---
import BaseHead from '../components/BaseHead.astro';
import BlogHeader from '../components/BlogHeader.astro';
---

<html lang={'es' || 'en'}>
	<head>
		<BaseHead title="Casita Creativa" description="Casita Creativa" permalink="https://casitacreativa.org" />
	</head>

	<body class="min-h-[100dvh] bg-blue-200 flex flex-col justify-between items-center">
		<BlogHeader />
		<main id="main" class="grow md:rounded min-h-full sm:w-3/4 md:mt-0 bg-pink-100 md:py-6 flex flex-col justify-center items-center">
			<slot></slot>
		</main>
		<footer class="md:rounded w-full sm:w-3/4 md:mb-6 flex flex-col items-center bg-white">
			<p class="text-gray-500">Casita Creativa 2023</p>
			<a href="/admin">Admin Dashboard 🔐</a>
		</footer>
	</body>
</html>


<script>
	const isMobile = () => /Android/i.test(navigator.userAgent) || /iPhone|iPad|iPod/i.test(navigator.userAgent);

	if(isMobile()){
		window.onload = () => {
			const nav = document.querySelector('#nav') as HTMLElement;
			document.querySelector('#main').classList.add(`mt-[${nav.clientHeight}px]`);
		}
	}

</script>